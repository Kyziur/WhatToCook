{
  "pre-commit": {
    "parallel": false,
    "commands": {
      "lint": {
        "glob": "*.{js,ts,html}",
        "run": "npm run lint:fix"
      },
      "format": {
        "glob": "*.{js,ts,html, json}",
        "run": "npm run format"
      },
      "format_backend": {
        "glob": "*.{cs}",
        "run": "dotnet format --include {staged_files} --no-restore"
      },
      "commit_changed": {
        "files": "git diff --cached --name-only",
        "run": "git add {files}"
      }
    }
  }
}
